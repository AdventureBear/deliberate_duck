<% include ../partials/header.ejs %>


<div id="page" class="ui container">

    <div class="ui grid">
        <div class="four wide column">
            <div class="ui header">
               Stories for: <%= project.name %>
            </div>
            <div class="ui  segments">
                <div class="ui segment inverted  blue">
                    Story 1
                </div>
                <div class="ui segment">
                    Story 2
                </div>
                <div class="ui segment">
                    Story 3
                </div>
            </div>
        </div>

        <div class="twelve wide column">

             <div class="ui form">
                <form action="/projects/<%= project._id %>/stories" method="POST">
                    <h3 class="ui dividing header">New User Story for <%= project.name %></h3>

                    <div class="field">
                        <p>Story Information</p>
                        <div class = "fields">
                            <div class="twelve wide field">
                                <label>Story Name</label>
                                <input name="story[name]" placeholder="Story name"></input>
                            </div>

                            <div class="four wide field">
                                <label>Date Due</label>
                                <input type="date" name="story[due]" placeholder="Date Due" value="<%= today %>"></input>
                            </div>
                        </div>
                    </div>
                        <!--<div class = "field">-->
                            <!--<label>Assigned to</label>-->
                            <!--<input name="story[assignedTo][username]" placeholder="user" placeholder=""></input>-->
                        <!--</div>-->



                   <div class = "field">
                     <label>As a</label>
                     <input name="story[asA]" placeholder="role"></input>
                   </div>
                   <div class = "field inverted">
                      <label>I Want</label>
                      <input name="story[iWant]" placeholder="to do this task"></input>
                   </div>
                   <div class="field inverted">
                     <label>So that</label>
                     <textarea name="story[soThat]"></textarea>
                   </div>
                   <div class="field inverted">
                      <label>Details & Additional Information</label>
                      <textarea name="story[details]"></textarea>
                   </div>
                    <div class = "field">
                        <label>Completed?</label>
                        <input type="checkbox"  name= "story[completed]" class="" value="true">
                    </div>

                    <input class="ui button blue big" type="submit">
                </form>
             </div>
        </div>

    </div>
</div>



<% include ../partials/footer.ejs %>