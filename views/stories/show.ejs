<% include ../partials/header.ejs %>

    <div id="page" class="ui container">

        <div class="ui grid">
            <div class="four wide column">
                <div class="ui header">
                    Project: Tri Coach Tools
                </div>
                <div class="ui  segments">
                    <div class="ui segment inverted  blue">
                        Story 1
                    </div>
                    <div class="ui segment">
                        Story 2
                    </div>
                    <div class="ui segment">
                        Story 3
                    </div>
                </div>
            </div>

            <div class="twelve wide column">
                <div class="ui raised segment ">
                    <h2 class="ui header">
                        Story Details -  <%= story.name %>
                    </h2>
                    <div class="ui items">
                        <div class="item">
                            <div class="image">
                                <img src="http://www.parade.pet/pet-photo-contest/assets/images/pet/img-pet/06.jpg">
                            </div>
                            <div class="content">
                                <div class="meta">
                                    <span>Added by: <%= story.owner.username %></span>
                                </div>
                                <div class="description">
                                    <p>As a <span><%= story.asA %></span>
                                        I want <span><%= story.iWant %></span>
                                        so that <span><%= story.soThat %></span>
                                    </p>
                                </div>
                                <div class="extra">
                                    <p> Assigned to: <%= story.assignedTo.username %></p>
                                    <p> Due: <%= story.due.toDateString() %></p>
                                    <p> Status:
                                        <% if (story.completed) { %>
                                        Complete
                                        <% } else {%>
                                        Incomplete
                                        <% } %>
                                    </p>
                                    <p> Additional Details: <%= story.details %> </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <% if (((currentUser && story.owner.id!= null && story.owner.id.equals(currentUser._id))|| currentUser && currentUser.isAdmin))  { %>
                <a href="/projects/<%= project_id %>/stories/<%= story._id %>/edit"><button class="ui button basic big green">Edit</button></a>
                <a href=""><button class="ui button basic big blue">Next</button></a>
                <form id="form_button" method="POST" action="/projects/<%= project_id %>/stories/<%= story._id %>?_method=DELETE"><button class="ui button basic big red">Delete</button></form>
                <% } %>
            </div>



        </div>
    </div>


<% include ../partials/footer.ejs %>