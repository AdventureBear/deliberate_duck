<% include ../partials/header.ejs %>

<div id="page" class="ui segment">
    <div class="ui container">
        <div class="ui raised text items container attached">
            <h2 class="ui header">
                Project Details
            </h2>

            <a href="./"><button class="ui button basic big blue">Back</button></a>

            <h1 class="ui  header">
                Edit <%= project.name %>
            </h1>

            <div class="ui  form">
                <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
                    <div class="fields">
                        <div class="twelve wide field">
                            <div class = "field">
                                <label>Project Name</label>
                                <input name="project[name]" value="<%= project.name %>">
                            </div>
                        </div>

                        <div class="four wide field">
                            <div class = "field">
                                <label>Date Due</label>
                                <input name="project[dateDue]" type="Date" value="<%= project.dateDue.toISOString().slice(0,10) %>">
                            </div>
                        </div>
                    </div>

                    <div class="field">
                        <label>Project Avatar URL</label>
                        <input name="project[avatar]" value="<%= project.avatar %>">
                    </div>

                    <div class="field">
                        <label>Project Description</label>
                        <textarea name="project[description]"><%= project.description %></textarea>
                    </div>

                    <div class="inline field">
                        <input type="checkbox" name="project[isPublic]" class="" value="<%= project.isPublic %>">
                        <label>Public?</label>
                    </div>

                    <div class="inline field">
                        <input type="checkbox" class="hidden" name="project[isComplete]" value="<%= project.isComplete %>">
                        <label>Completed?</label>
                    </div>

                    <input class="ui button   blue big" type="submit">
                </form>
            </div>

        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>