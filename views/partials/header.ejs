<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
  <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
  <link type="text/css" rel="stylesheet" href="/stylesheets/styles.css">
  <link type= "text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui-calendar/0.0.8/calendar.min.css" />


  <!-- Site Properties -->
  <title>Deliberate Duck</title>

</head>

<body>
<div class="ui large top fixed menu">
  <div class="ui container">
    <a href="/" class="active item">Home</a>
    <a href="/users" class="item">Users</a>
    <a class="item" href="/projects">Projects</a>

    <div class="right menu">
        <% if (!currentUser) { %>
        <div class="item">
            <a class="ui button" href="/login">Log in</a>
        </div>
        <div class="item">
            <a class="ui primary button" href="/register">Sign Up</a>
        </div>
        <% } else { %>
        <div class="item">
            Hello, <%= currentUser.username %>!
        </div>
        <div class="item">
            <a class="ui primary button" href="/logout">Logout</a>
        </div>
        <% } %>

    </div>
  </div>
</div>

<div class="ui container" id="flash">
    <% if (success && success.length>0 ) { %>
     <div class="ui success message">
         <p><%= success %></p>
     </div>
    <% } %>
    <% if (error && error.length>0 ) { %>
    <div class="ui error message">
        <p><%= error %></p>
    </div>
    <% } %>
</div>